source "https://rubygems.org"

# Uncomment this line to use GitHub Pages
gem "github-pages", group: :jekyll_plugins

# If you want to use Jekyll but not GitHub Pages, keep the following line and remove the above line.
# gem "jekyll", "~> 4.3.3"

# Default theme for new Jekyll sites
gem "minima", "~> 2.5.1"

# Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
end

# Timezone data and performance booster
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end
gem "wdm", "~> 0.1.1", :platforms => [:mingw, :x64_mingw, :mswin]
gem "http_parser.rb", "~> 0.6.0", :platforms => [:jruby]

# Jekyll theme
gem "jekyll-theme-cayman"
